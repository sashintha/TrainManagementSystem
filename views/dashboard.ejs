<!DOCTYPE html>
<html>
  <head>
    <title>DASHBOARD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/dashboard.css">
  </head>
  <body>
    <div class="container mainContainer">
      <div class="row header justify-content-evenly">
        <!-- header -->
            <div class="col-1"></div>
            <div class="col-10 h_title"> 
              D A S H B O A R D
            </div>
            <div class="col-1">
              <form action="/" method="GET">
                <button type="submit" class="btn btn-dark">Logout</button>
              </form>
            </div>

        <!-- search-bar -->
        <div class="h_searchBar">
            <input type="text" value="" style="width: 600px; height:35px">
        </div>
      </div>

      <!-- MAIN CONTENT #1 (row 1)-->
      <div class="row mainContent">
        <!-- box 1 -->
        <div class="col-7">
          <div class="p-3 border bg-dark entity">
            <!-- TABLE TITLE -->
            <div class="row">
              <div class="col t_title">
                S C H E D U L E
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                <table class="table" style="color:white">
                  <thead>
                    <tr>
                      <th scope="col">Train</th>
                      <th scope="col">Arrival</th>
                      <th scope="col">Departure</th>
                      <th scope="col">Status</th>
                    </tr>
                  </thead>
                  <tbody>
                        <% for(var i=0; i<5; i++) {%>
                        <tr>
                            <th scope="row"><%=stuff[i]['trainNo']%></th>
                            <td><%= stuff[i]['arrivalTime'] %></td>
                            <td><%= stuff[i]['departureTime'] %></td>
                            <td><%= stuff[i]['routeStatus'] %></td>
                        </tr>
                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <hr>
              <form action="/schedule" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW SCHEDULES</button>
              </form>
            </div>
          </div>
        </div> 
        <!-- col end -->
        <!-- box 2 -->
        <div class="col-5">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                M A I N T E N A N C E
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                T A B L E
              </div>
            </div>
            <div class="row">
              <hr>
              <form action="/maintenanceTable" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW MAINTENANCE</button>
              </form>
            </div>
          </div>
        </div>
			</div>

      <!-- MAIN CONTENT #2 (row 2) -->
      <div class="row mainContent">
        <!-- box 3 -->
        <div class="col-5 gy-4">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                T I T L E
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                T A B L E
              </div>
            </div>
            <div class="row">
              <hr>
              <form action="/schedule" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW SOMETHING</button>
              </form>
            </div>
          </div>
				</div>
        <!-- box 4 -->
        <div class="col-7 gy-4">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                T I T L E
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                T A B L E
              </div>
            </div>
            <div class="row">
              <hr>
              <form action="/schedule" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW SOMETHING</button>
              </form>
            </div>
          </div>
				</div>
			</div>

      <!-- MAIN CONTENT #3 (row 3) -->
      <div class="row mainContent">
        <!-- box 5 -->
        <div class="col-12 gy-8" style="padding-top:50px; padding-bottom:50px;">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                E M P L O Y E E
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                T A B L E
              </div>
            </div>
            <div class="row">
              <hr>
              <form action="/employees" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW EMPLOYEES</button>
              </form>
            </div>
          </div>
				</div>
			</div>
      
    </div>
  </body>
</html>
