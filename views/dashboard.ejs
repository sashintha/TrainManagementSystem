<!DOCTYPE html>
<html>
  <head>
    <title>DASHBOARD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/dashboard.css">
  </head>
  <body>
    <script>
      // popup showing salary was updated
      function updateSalary() {
        alert("Salary updated!");
      }
    </script>
    <div class="container mainContainer">
      <div class="row header justify-content-evenly">
        <!-- header -->
            <div class="col-1"></div>
            <div class="col-10 h_title"> 
              D A S H B O A R D
            </div>
            <div class="col-1">
              <!-- button to logout -->
              <form action="/" method="GET">
                <button type="submit" class="btn btn-dark">Logout</button>
              </form>
            </div>
      </div>

      <!-- MAIN CONTENT #1 (row 1)-->
      <div class="row mainContent">
        <!-- box 1 -->
        <div class="col-8">
          <div class="p-3 border bg-dark entity">
            <!-- TABLE TITLE -->
            <div class="row">
              <div class="col t_title">
                S C H E D U L E S
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                <table class="table" style="color:white">
                  <thead>
                    <tr> 
                      <th scope="col">Train</th>
                      <th scope="col">Arrival</th>
                      <th scope="col">Departure</th>
                      <th scope="col">Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- loop through schedule data and display in table -->
                        <% for(var i=0; i<6; i++) {%>
                        <tr>
                            <th scope="row"><%=scheduleData[i]['trainNo']%></th>
                            <td><%= scheduleData[i]['arrivalTime'] %></td>
                            <td><%= scheduleData[i]['departureTime'] %></td>
                            <td><%= scheduleData[i]['routeStatus'] %></td>
                        </tr>
                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <hr>
              <!-- button to view all schedules -->
              <form action="/schedule" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW ALL SCHEDULES</button>
              </form>
            </div>
          </div>
        </div> 
        <!-- col end -->
        <!-- box 2 -->
        <div class="col-4">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                S T A F F
              </div>
            </div>
            <div class="row" style="height:350px">
              <div class="col-12 table_content">
                <table class="table" style="color:white">
                  <thead>
                    <tr>
                      <th scope="col">Department</th>
                      <th scope="col">Total</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- loop through employee table and display data in table -->
                        <% for(var i=0; i<t_employees.length; i++) {%>
                        <tr>
                            <th><%=t_employees[i]['dpt']%></th>
                            <td><%= t_employees[i]['COUNT(*)'] %></td>
                        </tr>
                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row" style="text-align: center; padding-bottom:50px;">
              <label style="padding:10px">
                Update Salary
              </label>
              <!-- button to update salary for employees working during christmas -->
              <form action="/giveRaise" method="GET">
                <button type="submit" class="btn btn-light" onClick="updateSalary()">Give Raise</button>
              </form>
            </div>
          </div>
        </div>
			</div>

      <!-- MAIN CONTENT #2 (row 2) -->
      <div class="row mainContent" style="justify-content: center;">
        <!-- box 3 -->
        <div class="col-9 gy-4">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                M A I N T E N A N C E
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                <table class="table" style="color:white">
                  <thead>
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Type</th>
                      <th scope="col">Maintain Date</th>
                      <th scope="col">Performed By</th>
                      <th scope="col">Cost</th>
                      <th scope="col">Supervised By</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- loop through maintenance table and display data in table -->
                        <% for(var i=0; i<4; i++) {%>
                        <tr>
                            <th scope="row"><%= main_log[i]['maintainLogID'] %></th>
                            <td><%= main_log[i]['maintainType'] %></td>
                            <td><%= main_log[i]['maintainDate'] %></td>
                            <td><%= main_log[i]['maintainPerformBy'] %></td>
                            <td><%= main_log[i]['cost'] %></td>
                            <td><%= main_log[i]['supervisedBy']%></td>
                        </tr>
                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <hr>
              <!-- button to view all maintenance -->
              <form action="/maintenance" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW ALL MAINTENANCE LOGS</button>
              </form>
            </div>
          </div>
				</div>
			</div>

      <!-- MAIN CONTENT #3 (row 3) -->
      <div class="row mainContent">
        <!-- box 4 -->
        <div class="col-12 gy-8" style="padding-top:50px; padding-bottom:50px;">
          <div class="p-3 border bg-dark entity">
            <div class="row">
              <div class="col t_title">
                E M P L O Y E E S
              </div>
            </div>
            <div class="row">
              <div class="col table_content">
                <table class="table" style="color:white">
                  <thead>
                    <tr>
                      <th scope="col">Email</th>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Phone #</th>
                      <th scope="col">Salary</th>
                      <th scope="col">Position</th>
                      <th scope="col">Department</th>
                      <th scope="col">Start Date</th>
                      <th scope="col">Vactaion Days</th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- loop through employee table and display data in table -->
                        <% for(var i=0; i<5; i++) {%>
                        <tr>
                            <td><%=employeeTable[i]['email']%></td>
                            <td><%= employeeTable[i]['fName'] %></td>
                            <td><%= employeeTable[i]['lName'] %></td>
                            <td><%= employeeTable[i]['phoneNo'] %></td>
                            <td><%= employeeTable[i]['salary'] %></td>
                            <td><%= employeeTable[i]['pos'] %></td>
                            <td><%= employeeTable[i]['dpt'] %></td>
                            <td><%= employeeTable[i]['employmentStart'] %></td>
                            <td><%= employeeTable[i]['allocatedVacation'] %></td>
                        </tr>
                        <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <hr>
              <!-- button to view all employees -->
              <form action="/employees" method="GET" class="box_footer">
                <button type="submit" class="btn btn-dark shadow-none reBtn">VIEW ALL EMPLOYEES</button>
              </form>
            </div>
          </div>
				</div>
			</div>
    </div>
  </body>
</html>
